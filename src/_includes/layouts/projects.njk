---
layout: layouts/base.njk
---

{% set breadcrumbs = false %}
{% set intro = true %}
{% include "components/collection-header-projects.njk" %}

<section id="content" class="py-5">
    <div class="container">

        <div class="d-flex align-items-stretch flex-column flex-xl-row">

            {% for project in collections.projects | where ("data.featured", true) %}
            {% include "components/project-card.njk" %}
            {% endfor %}

        </div>

        <div class="d-flex align-items-stretch flex-column flex-xl-row">

            {% for project in collections.projects | where ("data.featured", false) %}
            {% include "components/project-card.njk" %}
            {% endfor %}

        </div>

    </div>
</section>