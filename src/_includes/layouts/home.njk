---
layout: layouts/base.njk
---

<header id="hero" class="jumbotron-fluid bg-dark text-light gradient-radial">
    <div id="particles"></div>
    <div class="container h-100">
        <div class="row h-100 align-items-center d-none d-sm-flex">
            <div class="col">
                {% include "components/posts-carousel.njk" %}
            </div>
        </div>
    </div>
    <section id="contact" class="bg-medium gradient-radial py-3">
        <div class="container">

            <ul class="list-inline d-flex justify-content-center text-center text-shadow mb-0">
                <li class="h5 list-inline-item mx-2">
                    <a href="{{ '/contact/' | url }}" class="align-middle text-light">
                        <i class="fa fa-envelope-square fa-lg fa-fw m-1" aria-hidden="true"></i>Email
                    </a>
                </li>
                {% for social in socials | selectattr('featured') %}
                <li class="h5 list-inline-item mx-2">
                    <a href="{{ social.url }}" class="align-middle text-light">
                        <i class="fab fa-{{ social.icon | default(social.name) | lower }} fa-lg fa-fw m-1" aria-hidden="true"></i>{{ social.name }}
                    </a>
                </li>
                {% endfor %}
            </ul>

        </div>
    </section>
</header>

<section id="content" class="py-5">
    <div class="container">

        <div class="card">
            <div class="card-body">
                {{ layoutContent | safe }}
            </div>
        </div>

    </div>
</section>