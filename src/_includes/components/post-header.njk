<header class="post-meta">

    <h3 class="card-title mb-3">
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h3>

    <div class="container-fluid px-0">
        <div class="row no-gutters">

            <div class="col-12 col-md-auto mr-4">
                <h6 class="text-medium">
                    <i class="fa fa-calendar fa-fw mr-1" aria-hidden="true"></i>
                    <time datetime="{{ post.date | date('') }}">{{ post.date | date('MMMM DD, YYYY') }}</time>
                </h6>
            </div>

            {% if post.data.tags.length %}
            <div class="col-12 col-md-auto">
                <h6 class="text-medium">
                    <i class="fa fa-tags fa-fw mr-1" aria-hidden="true"></i>
                    {% for i in post.data.tags | list %}{{ i }}{% if not loop.last %}, {% endif %}{% endfor %}
                </h6>
            </div>
            {% endif %}

        </div>

    </div>

</header>
