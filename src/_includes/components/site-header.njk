<header id="header" class="site-header {% if page.url == '/' %}floating{% endif %} bg-dark text-light py-4">
    <nav class="navbar">
        <div class="container flex-column flex-lg-row justify-content-center justify-content-lg-between">

            <a class="navbar-brand site-header-logo text-center mx-0 px-3" href="{{ '/' | url }}">
                <h1>{{ site.title }}</h1>
                <h2>{{ site.description }}</h2>
            </a>

            {% set menu = menus.header %}
            <ul class="nav d-flex flex-wrap justify-content-lg-end justify-content-center mt-3 mt-lg-0">
                {% include "components/nav-links.njk" %}
            </ul>

        </div>
    </nav>
</header>
